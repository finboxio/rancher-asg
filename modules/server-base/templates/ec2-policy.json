{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "s3:*",
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::${config_bucket}",
        "arn:aws:s3:::${config_bucket}/*",
        "arn:aws:s3:::${status_bucket}",
        "arn:aws:s3:::${status_bucket}/*"
      ]
    },
    {
      "Action": [
        "autoscaling:*",
        "ec2:*",
        "sqs:*",
        "events:*",
        "sns:*",
        "elb:*"
      ],
      "Effect": "Allow",
      "Resource": "*"
    }
  ]
}
